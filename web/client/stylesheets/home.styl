@import "vars"
@import "variables"
@import "icons"

.moduleHolder
	height 100%
	width 100%
	position relative
	@extend .FLEX-COL-START-STRETCH

	.contentWithSidebar
		height 100%
		width 100%
		@extend .FLEX-COL-START-STRETCH

	.sectionHeader
		flex 0 0 auto
		width 100%

		h2
			text-align center
			margin 0 20px
			padding 10px 20px 0 20px
			position relative
			border-bottom thin solid COLOR-GREY-LESSLIGHT

			&::before
				content ''
				display block
				height 60px
				width 100%
				pointer-events none
				position absolute
				top 100%
				left 0

	aside
		position absolute
		padding 10px 20px
		text-align right
		bottom 0
		right 0
		height (20px + H-ICON)
		width auto
		
		&::before
			content ''
			display block
			height 60px
			width 100%
			pointer-events none
			position absolute
			bottom (20px + H-ICON)
			left 0

	.sectionContent
		flex 1 0 auto
		height 100%
		width 100%
		
		&.headlist
			.itemListHeader
				flex 0 0 auto
			.itemList
				flex 1 0 auto
				width 100%



#billing
	.moduleHolder
		.sectionContent
			#billingChart
				position absolute
				bottom 70px
				width 100%
				top 100px

		.chartInner
			max-width 500px
			margin-left auto
			margin-right auto

	&.view
		.sectionContent

			#billingChart
				width 100%
				height 100%
				padding 20px 0 50px 0

			.chartInner
				max-width 800px
				margin-left auto
				margin-right auto



