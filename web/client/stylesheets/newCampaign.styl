@import "vars"
@import "variables"
@import "icons"

#newCampaign

	.sectionContent
		@extend .FLEX-ROW-STRETCH

#newCampaignSelect
	padding 20px 20px 0 20px
	flex 0 0 40%
	@extend .FLEX-COL-START-STRETCH

#selectWidgetType
	flex 0 0 auto
	.horizontal
		justify-content space-around
		width 100%

		.button
			&.bigSelect
				margin 10px

#widgetSearch
	flex 1 auto
	padding 10px 10px 0 10px
	@extend .FLEX-COL-START-STRETCH, .TRANS-DEF

	.field
		background-color C-BACKGROUND
		padding-right (20px + 15px + 10px)
		border-radius 10px
		flex 0 auto
		.input
			background-color transparent
			height 60px
		.icon
			margin-right 15px
			font-size 22px

	.sugerencias
		padding 0 !important
		flex 1 auto
		@extend .FLEX-COL-START-STRETCH

		.message
			padding 5px 0 0 20px

		.scrollbarHolder
			height 100% !important

			>div
				width 100% !important
				left 0 !important
				right 0 !important

	&.empty
		.field
			background-color transparent
			border thin solid COLOR-GREY-LESSLIGHT
			.icon
			.input
				opacity 0

.suggestionItem
	margin 0 auto 20px auto
	max-width W-DESK-S
	align-items center
	cursor pointer
	@extend .FLEX-ROW
	width 100%

	&:first-of-type
		margin-top 20px

	.cut
	.thumb
		flex 0 0 auto
		margin-right 10px
		border-radius 50%
		text-align center
		font-size 11px
		font-weight 400
		line-height H-ICON

	.cut
		margin-left 20px
		background-color C-SECONDARY-ALTERN
		height H-ICON
		width H-ICON

	.thumb
		height (H-ICON * 3)
		width (H-ICON * 3)
		@extend .FLEX-COL-START-STRETCH
		justify-content center
		background-color COLOR-WHITE
		border thin solid COLOR-GREY-LESSLIGHT
		overflow hidden

		.img
			margin auto
			border none
			height 100%
			width auto

	.title
		flex 1 auto

#widgetConfig
	flex 0 0 60%
	@extend .FLEX-COL-START-STRETCH, .TRANS-DEF
	padding 30px 20px 20px 0
	overflow hidden
	position relative

	&::before
		content ''
		display block
		position absolute
		transform rotate(45deg)
		height H-FIELD
		width H-FIELD
		background-color COLOR-WHITE
		top 50%
		left -(H-FIELD / 2)
		margin-top -(H-FIELD / 2)
		border-top-right-radius 5px
		@extend .TRANS-DEF
		animation-delay .3s

	>.inner
		background-color C-SECONDARY-ALTERN-DARK
		flex 1 auto
		border-radius 10px
		overflow hidden
		@extend .FLEX-COL-START-STRETCH, .TRANS-DEF

	.horizontalButtons
		width 100%
		flex 0 auto
		text-align center

		.horizontal
			width 100%

			.button
				flex 1 1 auto
				border-bottom-left-radius 0
				border-bottom-right-radius 0
				height 60px
				&.active
					background-color C-SECONDARY-ALTERN-LIGHT
					border-top-left-radius 10px
					border-top-right-radius 10px

	.sliderWidget
		flex 1 auto
		background-color C-SECONDARY-ALTERN-LIGHT
		@extend .FLEX-COL-START-STRETCH
		.inner
			flex 1 auto
			@extend .FLEX-COL-START-STRETCH

			.select
				flex 0 auto
				color C-SECONDARY
				border thin solid C-SECONDARY-ALTERN-DARKER
				margin 20px
				max-height 60px
				line-height 60px
				background-color rgba(COLOR-WHITE, .7)

				.optionHolder
					left -1px
					min-width calc(100% + 2px)


			.actionHolder
				flex 0 auto
				@extend .FLEX-ROW
				justify-content flex-end
				align-items center
				padding 10px

				.button
					width auto
					display inline-block
					flex 0 auto
					padding 0 20px

			.linkHolder
				flex 1 auto
				p
					font-size 18px
					text-align center
					padding 30px 20px
					color C-SECONDARY
					font-weight 300

			.sliderHolder
				flex 1 auto
				@extend .FLEX-COL
				justify-content center
				align-items center
				.img
					width 100%
					max-width 500px
					height auto
					display block

	&.empty
		>.inner
			border thin solid COLOR-GREY-LESSLIGHT
			background-color transparent
		&::before
			left -(H-FIELD * 1.5)

		.sliderWidget
			background-color transparent

.alertCode
	max-width 100%
	text-align left
	word-break break-all
	background-color COLOR-GREY-LIGHT
	padding 20px 30px
	font-weight lighter
	border-radius 10px
	margin 10px 20px
	font-family Courier, monospace
	color COLOR-GREY-MED-DARK
	font-size 85%
	letter-spacing .05em
	line-height 1.4em
.campaignResultAlert
	img
		margin 20px auto