// RESET

	*
		margin 0
		padding 0
		border 0
		border-collapse collapse
		font-size 100%
		vertical-align baseline
		box-sizing border-box
		outline none
		&::before
		&::after
			margin 0
			padding 0
			border 0
			border-collapse collapse
			font-size 100%
			vertical-align baseline
			box-sizing border-box
			outline none

	article
	aside
	details
	figcaption
	figure
	footer
	header
	menu
	nav
	section
		display block

	ol
	ul
		list-style none

	blockquote
	q
		quotes none

	blockquote
	q
		&::before
		&::after
			content ''
			content none

	table
		border-collapse collapse
		border-spacing 0
